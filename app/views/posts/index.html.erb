<h1>List of all Game Reviews</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Author Name</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= post.author_name %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>