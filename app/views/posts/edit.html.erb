<h1>Edit Article</h1>
<% if @post.errors.any? %>
  <h2>The following errors prevented the article from saving:</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :author_name %><br>
    <%= f.text_area :author_name %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>