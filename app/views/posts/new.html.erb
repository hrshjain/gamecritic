<h1>Create a new Post</h1>
<% if @post.errors.any? %>
  <h2>The following errors prevented the article from saving:</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :author_name %>
    <%= f.text_field :author_name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>